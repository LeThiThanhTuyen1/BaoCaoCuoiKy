@model Supplier

@{
    ViewData["Title"] = "XÓA NHÀ CUNG CẤP";
}
<head>
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<h1>Xóa Nhà Cung Cấp</h1>

<h3>Bạn có chắc thực hiện thao tác này không?</h3>
<div>
    <h4>Nhà Cung Cấp</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class = "col-sm-2">
            Địa chỉ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class = "col-sm-2">
            Liên hệ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contact)
        </dd>
    </dl>

    <form asp-action="Delete">
        <input type="hidden" asp-for="SupplierId" />
        <input type="submit" value="Xóa" class="btn btn-danger" /> |
        <a asp-action="Index">Trờ về</a>
    </form>
</div>
