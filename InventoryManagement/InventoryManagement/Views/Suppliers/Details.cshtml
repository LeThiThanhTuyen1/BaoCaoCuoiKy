@model Supplier

@{
    ViewData["Title"] = "Xem Chi Tiết";
}
<head>
    <link href="~/css/style.css" rel="stylesheet" />
</head>
<h1>Xem Chi Tiết</h1>

<div>
    <h4>Nhà Cung Cấp</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Tên
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Name)
        </dd>
        <dt class="col-sm-2">
            Địa chỉ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Address)
        </dd>
        <dt class="col-sm-2">
            Liên hệ
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Contact)
        </dd>
    </dl>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.SupplierId">Chỉnh Sửa</a> |
    <a asp-action="Index">Quay Lại</a>
</div>
